{
  "manifest_version": 3,
  "name": "Phisherman - URL Scanner",
  "description": "Scan the current page URL with the Phisherman phishing-detection API.",
  "version": "0.1.0",
  "icons": {
    "16": "src/icons/icon16.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/icons/icon16.png",
      "48": "src/icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "src/service-worker.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}