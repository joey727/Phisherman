{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "ES2022"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "__tests__/phishtank.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__"
  ]
}