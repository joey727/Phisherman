{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJs",
    "lib": ["ES2020"],
    // "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
